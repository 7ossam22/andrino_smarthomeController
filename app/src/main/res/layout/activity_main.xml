<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030323"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/remote_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_remote_control"
        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#215A9F"
        android:text="Andrino"
        android:textStyle="bold"
        android:layout_margin="35dp"/>

    <EditText
        android:id="@+id/Email_txt"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:drawableLeft="@drawable/ic_baseline_mail"
        android:textFontWeight="1"
        android:drawablePadding="15dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email"
        android:textColorHint="#215A9F"
        android:textColor="#215A9F" />

    <EditText
        android:id="@+id/Password_txt"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/ic_baseline_lock"
        android:ems="10"
        android:drawablePadding="15dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#215A9F"
        android:textColor="#215A9F"
        android:textFontWeight="1"
        />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:layout_marginTop="5dp"
        android:textColor="#215A9F"
        android:paddingLeft="10dp"/>

    <Button
        android:id="@+id/Login_btn"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/loginbtn_design"
        android:text="Login"
        android:textColor="#ffffff" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

</LinearLayout>